<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >
<TextView
    android:layout_width="match_parent"
    android:layout_height="200px"
    android:text="历史数据查询"
    android:gravity="center"
    android:background="#FF0086D1"
    android:textColor="@color/white"
    android:textSize="50px"
    >
</TextView>
   <LinearLayout
       android:layout_width="600px"
       android:layout_height="320px"
       android:background="@color/white"
       android:orientation="vertical">
       <LinearLayout
           android:layout_width="600px"
           android:layout_height="100px"
           android:orientation="horizontal">
           <TextView
               android:layout_width="200px"
               android:layout_height="80px"
               android:text="开始"
               android:textColor="#FF0086D1">
           </TextView>
       </LinearLayout>
       <LinearLayout
           android:layout_width="600px"
           android:layout_height="100px"
           android:orientation="horizontal">
           <TextView
               android:layout_width="100px"
               android:layout_height="100px"
               android:text="日期："
               android:textColor="@color/black">
           </TextView>
           <TextView
               android:layout_width="200px"
               android:layout_height="100px"
               android:text="2022-11-09"
               android:textColor="@color/black"
               android:id="@+id/start_date_text_view">
               </TextView>
           <Button
               android:layout_width="200px"
               android:layout_height="100px"
               android:text="设置"
               android:background="#FF0086D1"
               android:id="@+id/start_date_button">
           </Button>

       </LinearLayout>
       <TextView
           android:layout_width="600px"
           android:layout_height="20px">

       </TextView>
       <LinearLayout
           android:layout_width="600px"
           android:layout_height="100px"
           android:orientation="horizontal">
           <TextView
               android:layout_width="100px"
               android:layout_height="100px"
               android:text="时间"
               android:textColor="@color/black">
           </TextView>
           <TextView
               android:layout_width="200px"
               android:layout_height="100px"
               android:text="10:59"
               android:textColor="@color/black"
               android:id="@+id/start_time_text_view">
           </TextView>
           <Button
               android:layout_width="200px"
               android:layout_height="100px"
               android:text="设置"
               android:background="#FF0086D1"
               android:id="@+id/start_time_button">
           </Button>

       </LinearLayout>

   </LinearLayout>
    <LinearLayout
        android:layout_width="600px"
        android:layout_height="320px"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="600px"
            android:layout_height="100px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200px"
                android:layout_height="80px"
                android:text="结束"
                android:textColor="#FF0086D1">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="600px"
            android:layout_height="100px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100px"
                android:layout_height="100px"
                android:text="日期："
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:layout_width="200px"
                android:layout_height="100px"
                android:text="2022-11-09"
                android:textColor="@color/black"
                android:id="@+id/end_date_text_view">
            </TextView>
            <Button
                android:layout_width="200px"
                android:layout_height="100px"
                android:text="设置"
                android:background="#FF0086D1"
                android:id="@+id/end_date_button">
            </Button>

        </LinearLayout>
        <TextView
            android:layout_width="600px"
            android:layout_height="20px">

        </TextView>
        <LinearLayout
            android:layout_width="600px"
            android:layout_height="100px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100px"
                android:layout_height="100px"
                android:text="时间"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:layout_width="200px"
                android:layout_height="100px"
                android:text="10:59"
                android:textColor="@color/black"
                android:id="@+id/end_time_text_view">
            </TextView>
            <Button
                android:layout_width="200px"
                android:layout_height="100px"
                android:text="设置"
                android:background="#FF0086D1"
                android:id="@+id/end_time_button">
            </Button>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="600px"
        android:layout_height="100px"
        android:text="数据类型"
        android:textColor="#FF0086D1">

    </TextView>
    <Spinner
        android:id="@+id/spinner_rank"
        android:layout_width="220dp"
        android:layout_height="64dp"
        android:entries="@array/senor_select"
        android:spinnerMode="dialog" />
    <LinearLayout
        android:layout_width="600px"
        android:layout_height="200px"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="50px"
        >
        <Button
            android:layout_width="290px"
            android:layout_height="180px"
            android:text="确认"
            android:id="@+id/history_data_show"
            android:background="#FF0089D2">

        </Button>

    </LinearLayout>
    <RadioGroup
        android:id="@+id/history_navigation"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="0px"
        android:background="@color/white"
        android:layout_height="200px">
        <RadioButton
            android:id="@+id/history_activity_dashboard"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_baseline_dashboard_blue"
            android:text="监控"/>
        <RadioButton
            android:id="@+id/history_activity_history"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_baseline_history_red"
            android:text="历史"/>
        <RadioButton
            android:id="@+id/history_activity_home"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_baseline_home_blue"
            android:text="主页"/>




    </RadioGroup>

</LinearLayout>