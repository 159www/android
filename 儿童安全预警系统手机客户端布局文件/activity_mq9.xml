<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Mq_9Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:layout_marginBottom="200px"
        android:background="#FF23A7F2"
        android:text="气体浓度">

    </TextView>

    <com.example.ok.GasDashboard
        android:id="@+id/mq9_activity_gas_dashboard"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="500px"
        app:text_title_dial="CO浓度"
        android:layout_marginBottom="200px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200px"
                android:layout_height="100px"
                android:layout_marginLeft="20px"
                android:background="#FFFF6E9E"
                android:gravity="center"
                android:textSize="40px"
                android:text="浓度：">
            </TextView>
            <TextView
                android:layout_width="270px"
                android:layout_height="100px"
                android:id="@+id/mq9_activity_co_value"
                android:gravity="center"
                android:textSize="40px"
                android:textColor="#FF24ACF2"
                android:text="100"
                >
            </TextView>
            <TextView
                android:layout_width="200px"
                android:layout_height="100px"
                android:background="#FFFF6E9E"
                android:gravity="center"
                android:textSize="40px"
                android:text="PPM">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:gravity="center"
                android:text="浓度上限">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150px">
                <TextView
                    android:layout_width="200px"
                    android:layout_height="100px"
                    android:id="@+id/mq9_activity_co_high_limitation_textview"
                    android:text="上限：">
                </TextView>
                <SeekBar
                    android:layout_width="400px"
                    android:layout_height="100px"
                    android:id="@+id/mq9_activity_co_high_seekbar"
                    >
                </SeekBar>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="300px"
            android:layout_height="100px"
            android:background="#FF24ACF2"
            android:id="@+id/mq9_activity_back_button"
            android:text="返回">
        </Button>

    </LinearLayout>


</LinearLayout>