<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="#FF23A9F2"
        android:gravity="center_vertical"
        android:text="密码修改">
    </TextView>
    <LinearLayout
        android:layout_width="650px"
        android:layout_height="800px"
        android:layout_marginTop="300px"
        android:background="#FF0498FD"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="50px"
            android:layout_width="600px"
            android:layout_height="100px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200px"
                android:layout_height="100px"
                android:gravity="center"
                android:background="@color/white"
                android:text="账号："
                android:layout_marginLeft="50px">
            </TextView>
            <EditText
                android:layout_width="400px"
                android:layout_height="100px"
                android:hint="请输入账号"
                android:id="@+id/change_password_activity_account_edit"
                android:textColorHint="@color/white"
                >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="50px"
            android:layout_width="600px"
            android:layout_height="100px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200px"
                android:layout_height="100px"
                android:gravity="center"
                android:background="@color/white"
                android:text="旧密码："
                android:layout_marginLeft="50px">
            </TextView>
            <EditText
                android:layout_width="400px"
                android:layout_height="100px"
                android:hint="请输入旧密码"
                android:id="@+id/change_password_activity_old_password_edit"
                android:textColorHint="@color/white"
                >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="50px"
            android:layout_width="600px"
            android:layout_height="100px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200px"
                android:layout_height="100px"
                android:gravity="center"
                android:background="@color/white"
                android:text="新密码："
                android:layout_marginLeft="50px">
            </TextView>
            <EditText
                android:layout_width="400px"
                android:layout_height="100px"
                android:hint="请输入新密码"
                android:id="@+id/change_password_activity_new_password_edit"
                android:textColorHint="@color/white"
                >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="50px"
            android:layout_width="600px"
            android:layout_height="100px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200px"
                android:layout_height="100px"
                android:gravity="center"
                android:background="@color/white"
                android:text="确认："
                android:layout_marginLeft="50px">
            </TextView>
            <EditText
                android:layout_width="400px"
                android:layout_height="100px"
                android:hint="确认密码"
                android:id="@+id/change_password_activity_new_password_ok_edit"
                android:textColorHint="@color/white"
                >
            </EditText>
        </LinearLayout>
        <Button
            android:layout_width="200px"
            android:layout_height="100px"
            android:background="@color/white"
            android:layout_marginTop="50px"
            android:id="@+id/change_password_activity_change_button"
            android:text="修改"
            android:layout_marginLeft="250px">
        </Button>


    </LinearLayout>

</LinearLayout>