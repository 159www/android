<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1330px"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="300px"
                android:layout_height="200px"
                android:layout_marginTop="50px"
                android:background="@drawable/ic_baseline_person_24"></ImageView>

            <TextView
                android:layout_width="400px"
                android:textSize="40px"
                android:text="账号："
                android:gravity="center_vertical"
                android:id="@+id/home_activity_id_textview"
                android:layout_height="300px">

            </TextView>
            
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_marginTop="100px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200px"
                android:layout_height="150px"
                android:textSize="40px"
                android:gravity="center"
                android:text="修改密码:">
            </TextView>
            <Button
                android:layout_width="300px"
                android:layout_height="150px"
                android:layout_marginLeft="100px"
                android:id="@+id/home_activity_change_password_button"
                android:background="#FF24ADF3"
                android:text="修改">
            </Button>
        </LinearLayout>
        <Button
            android:layout_width="600px"
            android:layout_height="150px"
            android:layout_marginTop="500px"
            android:layout_marginLeft="50px"
            android:text="退出登录"
            android:background="#FF23A9F2"
            android:id="@+id/home_activity_logon_out">
        </Button>




    </LinearLayout>
    <RadioGroup
        android:id="@+id/home_navigation"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="200px">
     <RadioButton
         android:id="@+id/home_activity_dashboard"
         android:gravity="center"
         android:layout_gravity="center"
         android:layout_weight="1"
         android:button="@null"
         android:background="@null"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:drawableTop="@drawable/ic_baseline_dashboard_blue"
         android:text="监控"/>
        <RadioButton
            android:id="@+id/home_activity_history"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_baseline_history_blue"
            android:text="历史"/>
        <RadioButton
            android:id="@+id/home_activity_home"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_baseline_home_red"
            android:text="主页"/>




    </RadioGroup>

</LinearLayout>
