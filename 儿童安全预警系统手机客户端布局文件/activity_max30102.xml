<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:text="心率曲线">
    </TextView>
    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/heart_line_chart"
        android:layout_width="match_parent"
        android:layout_height="600px" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:text="峰值"
        android:textColor="#FF24ACF2">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="360px"
            android:layout_height="140px"
            android:gravity="center"
            android:background="@color/white"
            android:text="最高心率：100pbs"
            android:textColor="@color/black"
            android:id="@+id/max30102_activity_max_heart_beats_text_view">

        </TextView>
        <TextView
            android:layout_width="360px"
            android:layout_height="140px"
            android:gravity="center"
            android:background="@color/white"
            android:text="最低心率：80pbs"
            android:textColor="@color/black"
            android:id="@+id/max30102_activity_min_heart_beats_text_view">
        </TextView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:text="平均值"
        android:textColor="#FF24ACF2">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:id="@+id/max30102_activity_average_heart_beats_text_view"
        android:text="平均值：86bps">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:gravity="center"
            android:text="心率上限">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200px"
                android:layout_height="100px"
                android:gravity="center_vertical"
                android:id="@+id/max30102_activity_high_text_view"
                android:text=":上限">
            </TextView>
            <SeekBar
                android:layout_width="400px"
                android:layout_height="100px"
                android:id="@+id/max30102_activity_high_seekbar">
            </SeekBar>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:gravity="center"
            android:text="心率下限">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200px"
                android:layout_height="100px"
                android:gravity="center_vertical"
                android:text="下限："
                android:id="@+id/max30102_activity_low_text_view">
            </TextView>
            <SeekBar
                android:layout_width="400px"
                android:layout_height="100px"
                android:id="@+id/max30102_activity_low_seekbar">
            </SeekBar>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>